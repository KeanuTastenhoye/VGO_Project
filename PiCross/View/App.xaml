<Application x:Class="View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:View"
             xmlns:screens="clr-namespace:View.Screens"
             xmlns:viewmodel ="clr-namespace:ViewModel;assembly=ViewModel">
    
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:HomeScreenViewModel}">
            <screens:HomeScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:GameScreenViewModel}">
            <screens:GameScreen/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:PiCrossSelectorScreenViewModel}">
            <screens:PiCrossSelectorScreen/>
        </DataTemplate>
    </Application.Resources>
</Application>
